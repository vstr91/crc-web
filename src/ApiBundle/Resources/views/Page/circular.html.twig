                    maxZoom: 18,
                    id: 'mapbox.streets',
                    accessToken: 'pk.eyJ1IjoiYWxtaXJqdW5pb3I5MSIsImEiOiJjanNvdnV5OXEwcjNzM3luNWc5anA3OHJnIn0.Uj8yuT4uCHMdHhyjjX2B-A'
                }).addTo(map);
                
                carregaParadas();
                
                
                
            });
